  </ItemGroup>
  <ItemGroup>
    <Folder Include="Views\Book\" />
    <Folder Include="Repository\" />
    <Folder Include="wwwroot\images\" />
    <Folder Include="Database\" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="wwwroot\images\" />
